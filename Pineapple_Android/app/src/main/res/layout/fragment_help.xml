<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".HelpFragment">

    <TextView
        android:id="@+id/key_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/key_about_tv"
        app:layout_constraintBottom_toTopOf="@id/key_et"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:text="@string/key"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/key_about_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/key_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/key_et"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="@string/key_help_message"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <EditText
        android:id="@+id/key_et"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/key_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="명령어 리스트"
        android:id="@+id/command_list_tv"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/key_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/commands_tv"
        app:layout_constraintTop_toBottomOf="@id/command_list_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="17sp"
        android:text="1.목적지 안내\nex) 동국대학교 찾아줘.\n \n2.보호자에게 음성메시지 보내기\nex) 보호자한테 ~라고 전해줘.\n \n3.목적지까지 경로 보기\nex)지도 보여줘.\n\n4.챗봇과 대화내용 보기\nex) 대화 내용 보여줘.\n \n5.네비게이션 중단\nex) 안내 중단."
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>